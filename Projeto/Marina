dicionario = {}
lista = []
quartos = [1, 2, 3, 4, 5, 6]
quartosOcup = []

class cadastroHospede():
    def __init__(self):
        pass
    def salvarCadastro(self,cpf,nome):
        dicionario[cpf] = nome 
        lista.append(dicionario)
        return print(lista)
        
    def quartos():
        while quartos == "Ocupado":
            print("Quarto já ocupado")
        else:
            quartos = quartosOcup[:]
            print(quartos)
            print(quartosOcup)
            
    def servico():
         print("Opções 1 - Café da Manhã, 2- Almoço, 3 - Lanche ou 4 - Jantar ou 0 -  Desistir")
         qt = int(input("Qual quarto deseja solicitar: "))
         opcao = int(input("Digite o que deseja: "))
         if opcao == 1:
          print("Café da Manhã R$ 30,00")
         if opcao == 2:
            print("Almoço R$ 50,00")
         if opcao == 3:
            print("Lanche R$ 30,00")
         if opcao == 4:
            print("Jantar R$ 60,00")
         if opcao == 0:
            print("Desistir")
 

        
